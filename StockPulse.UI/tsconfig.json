{
  "compilerOptions": {
    "target": "ES2020",          // or ES2017, ES2018, ES2019
    "lib": ["DOM", "ES2020"],    // This includes Promise and other modern features
    "module": "ESNext",          // Good for working with imports
    "moduleResolution": "Node",
    "outDir": "./dist",          // Optional: output location for compiled JS
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
